<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:id="@+id/layout"
tools:context="com.example.dima.cleverinvest.ScanActivity">

<TextureView
    android:id="@+id/texture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/btn_takepicture"
    android:layout_alignParentTop="true"
    />

<Button
    android:id="@+id/btn_addLayer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/btn_takepicture"
    android:layout_alignParentTop="true"
    android:background="@android:color/transparent"

    android:text="A" />

<Button
    android:id="@+id/btn_takepicture"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    android:text="Take a picture" />

<GridLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="5"
    android:rowCount="4"
    android:id="@+id/popUp"
    android:visibility="gone"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:background="@drawable/customborder"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/warsteiner"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/stock"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"/>
        <!--
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        app:srcCompat="@android:drawable/ic_notification_overlay" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        app:srcCompat="@android:drawable/ic_media_play" />
                </LinearLayout>
                !-->
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/customborder"
        android:textColor="#FFFFFF"
        android:text="+ 3 %" />
    <ImageView
        android:id="@+id/curve2"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="left|top"
        app:srcCompat="@drawable/obenrechts"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"/>

    />
    <ImageView
        android:id="@+id/curve3"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_gravity="left|top"
        app:srcCompat="@drawable/linksoben"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"/>

    />
    <ImageButton
        android:id="@+id/button2"
        android:layout_column="0"
        android:layout_row="3"
        app:srcCompat="@drawable/lubzer"
        android:layout_width="50dp"
        android:background="@drawable/customborder"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />
    <View
        android:id="@+id/curve1"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_gravity="left|center_vertical"
        app:srcCompat="@drawable/linksoben"
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:adjustViewBounds="true"
        android:background="#28373c"
        android:scaleType="centerCrop"/>

    />
    <ImageButton
        android:id="@+id/button3"
        android:layout_column="4"
        android:layout_row="2"
        android:background="@drawable/customborder"
        app:srcCompat="@drawable/ampel"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

</GridLayout>
</RelativeLayout>

