<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dima.cleverinvest.ScanActivity">

    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_takepicture"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btn_addLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_takepicture"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"

        android:text="A" />

    <Button
        android:id="@+id/btn_takepicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Take a picture" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/popUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:orientation="vertical"
        android:rowCount="4"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@drawable/customborder"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/warsteiner" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/stock" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButton3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            app:srcCompat="@android:drawable/ic_notification_overlay" />

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            app:srcCompat="@android:drawable/ic_media_play" />
                    </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@drawable/customborder"
            android:text="+ 3 %"
            android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/curve2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_column="1"
                    android:layout_gravity="left|top"
                    android:layout_row="1"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/obenrechts" />

                />
                <ImageView
                    android:id="@+id/curve3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_column="1"
                    android:layout_gravity="left|top"
                    android:layout_row="3"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/linksoben" />

                />

                <ImageButton
                    android:id="@+id/button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:adjustViewBounds="true"
                    android:background="@drawable/customborder"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/lubzer" />
                <View
                    android:id="@+id/curve1"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_column="3"
                    android:layout_gravity="left|center_vertical"
                    android:layout_row="2"
                    android:adjustViewBounds="true"
                    android:background="#28373c"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/linksoben" />
        />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_column="4"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="@drawable/customborder"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ampel" />

    </GridLayout>
</RelativeLayout>

